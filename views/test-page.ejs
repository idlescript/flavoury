<!DOCTYPE html>
<html>
  <head>
    <style>body{margin-left:25px;}</style>
  </head>
  <body>
    <strong>Test Linking Page</strong><br><br>
    <a href="/personal-cookbook">To personal cookbook</a><br>
    <a href="/personal-recipe">To personal recipe</a><br>
    <a href="/public-cookbook">To public cookbook</a><br>
    <a href="/public-recipe">To public recipe</a><br>
    <a href="/edit-recipe">To edit recipe</a><br>
    <a href="/settings">To settings</a><br>

    <br><hr>
    <h3>Test insert data and delete data</h3>
    <a href="/insert-dummy-data">Insert random user data, folder data, and recipe data to DB</a><br><br>
    <a href="/delete-all-data">Delete all data</a><br><br>

    <br><strong>------ Insert user data (refresh page manually) ------</strong><br>
    <form action="/user/save-user" method="post">
      <label>Full Name:</label>
      <input type="text" id="insertuser1" name="fullname" required>
      <br>
      <label>Email:</label>
      <input type="email" id="insertuser2" name="email" required>
      <br>
      <label>Password:</label>
      <input type="password" id="insertuser3" name="password" required>
      <br>
      <input type="submit" value="Submit">
    </form>

    <br><strong>------ Edit user data (refresh page manually)  ------</strong><br>
    <form action="/user/edit-user" method="post">
      <label>User id:</label>
      <input type="text" id="edituser1" name="userId" required>
      <br>
      <label>Full Name:</label>
      <input type="text" id="edituser2" name="fullname" required>
      <br>
      <label>Email:</label>
      <input type="email" id="edituser3" name="email" required>
      <br>
      <label>Password:</label>
      <input type="password" id="edituser4" name="password" required>
      <br>
      <input type="submit" value="Submit">
    </form>

    <br><strong>------ Edit recipe (refresh page manually)  ------</strong><br>
    <form action="/recipe/edit-recipe" method="post">
      <label>Recipe id:</label>
      <input type="text" id="editrecipe1" name="recipeId" required>
      <br>
      <label>Recipe Title:</label>
      <input type="text" id="editrecipe2" name="title" required>
      <br>
      <label>Share to public:</label>
      <input type="text" id="editrecipe3" name="sharing" required>
      <br>
      <label>servings amount:</label>
      <input type="text" id="editrecipe4" name="servings" required>
      <br>
      <label>prep time:</label>
      <input type="text" id="editrecipe5" name="prepTime" required>
      <br>
      <label>cook time:</label>
      <input type="text" id="editrecipe6" name="cookTime" required>
      <br>
      <input type="submit" value="Submit">
    </form>


    <br><br><br><strong>------ User data: ------</strong><br><br>
    <% if (!userData || userData.length < 1) { %>
      No data
    <% } %>

    <% if (Array.isArray(userData)) { %>
      <% for (let data of userData) { %>
        user id: <%= data.id %><br>
        <%= data.fullname %><br>
        <%= data.email %><br>
        <%= data.password %><br>
        signup_datetime: <%= data.signup_datetime %><br>
        last_login: <%= data.last_login %><br>
        <%= data.profile_picture %><br>
        <br>
      <% } %>
    <% } else { %>
      user id: <%= userData.id %><br>
      <%= userData.fullname %><br>
      <%= userData.email %><br>
      <%= userData.password %><br>
      signup_datetime: <%= userData.signup_datetime %><br>
      last_login: <%= userData.last_login %><br>
      <%= userData.profile_picture %><br>
      <br>
    <% } %>



    <br><br><strong>------ Recipe folder data: ------</strong><br><br>
    <% if (!recipeFolder || recipeFolder.length < 1) { %>
      No data
    <% } %>

    <% if (Array.isArray(recipeFolder)) { %>
      <% for (let data of recipeFolder) { %>
        recipe folder id: <%= data.id %><br>
        user id: <%= data.app_user_id %><br>
        <%= data.folder_name %><br>
        <br>
      <% } %>
    <% } else { %>
      recipe folder id: <%= data.id %><br>
      user id: <%= recipeFolder.app_user_id %><br>
      <%= recipeFolder.folder_name %><br>
      <br>
    <% } %>


    <br><br><strong>------ Recipe data: ------</strong><br><br>
    <% if (!recipeData || recipeData.length < 1) { %>
      No data
    <% } %>

    <% if (Array.isArray(recipeData)) { %>
      <% for (let data of recipeData) { %>
        recipe id: <%= data.id %><br>
        user id: <%= data.app_user_id %><br>
        recipe folder id: <%= data.recipe_folder_id %><br>
        <%= data.recipe_title %><br>
        <%= data.share_to_public %><br>
        <%= data.date_created %><br>
        Servings: <%= data.servings_amount %><br>
        prep time: <%= data.prep_time %> mins<br>
        cook time: <%= data.cook_time %> mins<br>
        <br>
      <% } %>
    <% } else { %>
      recipe id: <%= data.id %><br>
      user id: <%= recipeData.app_user_id %><br>
      recipe folder id: <%= recipeData.recipe_folder_id %><br>
      <%= recipeData.recipe_title %><br>
      <%= recipeData.share_to_public %><br>
      <%= recipeData.date_created %><br>
      Servings: <%= recipeData.servings_amount %><br>
      prep time: <%= recipeData.prep_time %> mins<br>
      cook time: <%= recipeData.cook_time %> mins<br>
      <br>
    <% } %>

  </body>
</html>
